<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TabViewSample.More"
             xmlns:local="clr-namespace:TabViewSample">

    <ContentView.BindingContext>
        <local:MoreViewModel/>
    </ContentView.BindingContext>

    <ScrollView Padding="0,30,0,0" VerticalOptions="FillAndExpand" Background="BlanchedAlmond">
        <Grid >
            <Label Text="{Binding Text}" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        </Grid>
    </ScrollView>
</ContentView>
